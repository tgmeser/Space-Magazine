<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".features.favorite.FavoritesFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/ivArticleFavs"
            android:layout_width="240dp"
            android:layout_height="135dp"
            android:src="@drawable/best_article"
            app:shapeAppearance="@style/RoundedSquare" />



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/ivBlogFavs"
            android:layout_width="240dp"
            android:layout_height="135dp"
            android:src="@drawable/best_blog"
            app:shapeAppearance="@style/RoundedSquare" />



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/ivReportFavs"
            android:layout_width="240dp"
            android:layout_height="135dp"
            android:src="@drawable/best_report"
            app:shapeAppearance="@style/RoundedSquare" />



    </LinearLayout>


</LinearLayout>